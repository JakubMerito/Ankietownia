{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <h1>Dashboard</h1>

    <div>
        Zalogowany jako: <strong>{{ user.email }}</strong>
        |
        <a href="{{ path('app_logout') }}">Wyloguj</a>
        |
        <a href="{{ path('app_account') }}">Moje konto</a>
        |
        <a href="{{ path('app_survey_new') }}">Nowa ankieta</a>
    </div>

    <h2>Twoje ankiety:</h2>

    {% if surveys is empty %}
        <p>Nie masz jeszcze Å¼adnych ankiet.</p>
    {% else %}
        <ul>
            {% for survey in surveys %}
                <li>
                    {{ survey.title }} ({{ survey.createdAt|date('Y-m-d H:i') }})
                    |
                    <a href="{{ path('app_survey_questions', {id: survey.id}) }}">Edytuj pytania</a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}
