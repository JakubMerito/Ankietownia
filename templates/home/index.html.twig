{% extends 'base.html.twig' %}

{% block title %}Strona główna{% endblock %}

{% block body %}
    <style>
        .hero-bg {
            position: relative;
            width: 100%;
            height: 100vh;
            overflow: hidden;
        }

        .hero-bg::before {
            content: "";
            position: absolute;
            top: 0; left: 0;
            width: 100%; height: 100%;
            background: url('{{ asset("images/home-background.jpg") }}') no-repeat center center;
            background-size: cover;
            filter: blur(8px) grayscale(50%) brightness(50%);
            z-index: 1;
            transform: scale(1.1);
        }

        .hero-content {
            position: relative;
            z-index: 2;
            color: white;
            text-shadow: 0 1px 3px rgba(0,0,0,0.8);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100%;
            padding: 20px;
        }
    </style>

    <div class="hero-bg">
        <div class="hero-content text-center">
            <h1 class="display-4 mb-4">Witamy w Ankietowni!</h1>
            <p class="lead mb-5">Twórz i zarządzaj swoimi ankietami szybko i łatwo.</p>

            {% if app.user %}
                <a href="{{ path('app_dashboard') }}" class="btn btn-lg btn-light fw-bold px-4">Przejdź do dashboardu</a>
            {% else %}
                <div class="d-flex flex-column flex-md-row gap-3">
                    <a href="{{ path('app_login') }}" class="btn btn-primary btn-lg px-4">Zaloguj się</a>
                    <a href="{{ path('app_register') }}" class="btn btn-outline-light btn-lg px-4">Zarejestruj się</a>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
